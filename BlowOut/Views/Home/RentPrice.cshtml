@model BlowOut.Models.Instrument
@{
    ViewBag.Title = "RentPrice";
}
<div class="jumbotron">
    <h2>
        @ViewBag.Rent Rent Price
    </h2>
    <div class="container">
        <p>
            @if (ViewBag.Rent == "Used")
            {
            <p>The price for this used @Model.InstrumentName is $@Model.UsedPrice.00 per month</p>
        }
        else
        {
            <p>The price for this new @Model.InstrumentName is $@Model.NewPrice.00 per month</p>
        }
            </p>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <p>
                Rent instrument for 18 months, and you own it.
                <br />
                If instrument is returned after 3 months of renting and before 18 months, all equity in the instrument is forfeited.
                <br />
                If you return the instrument less than 3 months after renting, you will be assesed a $200 re-stocking fee
            </p>
        </div>
    </div>